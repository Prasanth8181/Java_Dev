--SQL to get list of all Items in TC
SELECT PITEMID FROM PITEM;

--List all items and it's revisions with Status and date released
SELECT 
  I.PITEM_ID ITEMID, 
  IR.PITEM_REVISION_ID REVISION, 
  ST.PNAME STATUS, 
  ST.PDATE_RELEASED "Date Released" 
FROM 
  PITEM I, 
  PITEMREVISION IR, 
  PRELEASE_STATUS_LIST RS, 
  PRELEASESTATUS ST 
WHERE 
  I.PUID = IR.RITEMS_TAGU 
  AND RS.PUID = IR.PUID 
  AND RS.PVALU_0 = ST.PUID;

--List All Item Revision with Item Id, Name, Desc, Object Type, Status, Date Released
SELECT 
  I.PITEM_ID ITEMID, 
  IR.PITEM_REVISION_ID REVISION, 
  WSO.POBJECT_NAME Name,
  WSO.POBJECT_DESC Description,
  WSO.POBJECT_TYPE "Object Type",
  ST.PNAME STATUS, 
  ST.PDATE_RELEASED "Date Released" 
FROM 
  PITEM I, 
  PITEMREVISION IR, 
  PRELEASE_STATUS_LIST RS, 
  PRELEASESTATUS ST, 
  PWORKSPACEOBJECT WSO
WHERE 
  I.PUID = IR.RITEMS_TAGU 
  AND RS.PUID = IR.PUID 
  AND RS.PVALU_0 = ST.PUID
  AND WSO.PUID = IR.PUID;

--List of Items, Revisions with ownership details
SELECT 
  I.PITEM_ID ITEMID, 
  IR.PITEM_REVISION_ID REVISION, 
  WSO.POBJECT_NAME Name,
  PG.PNAME OWNING_GROUP,
  U.POS_USERNAME OS_USER_NAME,
  PU.PUSER_NAME USER_NAME
FROM 
  PITEM I, 
  PITEMREVISION IR, 
  PWORKSPACEOBJECT WSO,
  PPOM_APPLICATION_OBJECT PPO,
  PPOM_GROUP PG,
  PPOM_USER PU,
  PUSER U
WHERE I.PUID = IR.RITEMS_TAGU 
AND WSO.PUID = IR.PUID
AND PPO.PUID = WSO.PUID
AND PPO.ROWNING_USERU = PU.PUID
AND PU.PUID = U.PUID
AND PG.PUID = PPO.ROWNING_GROUPU;
